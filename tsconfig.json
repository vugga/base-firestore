{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2015",
    "lib": ["es2015", "dom", "ES6"],
    "rootDir": "src",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "types": ["node", "mocha"],
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/test"
  ],
}
